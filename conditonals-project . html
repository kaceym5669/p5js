<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>

<head>
    <title>p5js Template</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/p5.js/0.5.3/p5.js"></script>

    <script>
        var r = 0;
        var g = 0;
        var b = 0;

        function setup() {
            createCanvas(600, 600);
            background(200)
            noStroke()

            //red square
            fill(250, 0, 0)
            rect(75, 500, 50, 50)

            //green square
            fill(0, 250, 0)
            rect(175, 500, 50, 50)

            //blue square
            fill(0, 0, 250)
            rect(275, 500, 50, 50)

            //white square
            fill(220, 220, 220)
            rect(375, 500, 50, 50)
        }

        function mousePressed() {
            if (mouseX > 75 && mouseX < 125 && mouseY > 500 && mouseY < 550) {
                r = 250
                g = 0
                b = 0
            }
            if (mouseX > 175 && mouseX < 225 && mouseY > 500 && mouseY < 550) {
                g = 250
                r = 0
                b = 0
            }
            if (mouseX > 275 && mouseX < 325 && mouseY > 500 && mouseY < 550) {
                b = 250
                r = 0
                g = 0
            }
            else if (mouseX > 375 && mouseX < 425 && mouseY > 500 && mouseY < 550) {
                r = 200
                g = 200
                b = 200
            
            
            }
        }

        function mouseDragged() {
            noStroke()
            fill(r, g, b)
            ellipse(mouseX, mouseY, 50, 50)

        }
    </script>
</head>

<body>
    <div id="code" class="container-fluid">
        <script src="https://gist-it.appspot.com/github/kaceym5669/p5js/blob/gh-pages/conditionals-project.html?footer=0"></script>
    </div>


    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    <script>
        $(window).bind("load", function() {
            $('#code').before($('#defaultCanvas0').remove());
        });
    </script>
</body>

</html>
